<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CourseAssignActivity"
    android:layout_margin="20dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/spinner_course"
        android:text="Select Course"
        android:textSize="20sp"
        android:textStyle="bold"
        />

<Spinner
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/spinner_course"
    android:layout_marginBottom="10dp"

    ></Spinner>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/spinner_teacher"
        android:text="Select Teacher"
        android:textSize="20sp"
        android:textStyle="bold"

        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_teacher"

        android:layout_marginBottom="10dp"

        ></Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/spinner_student"
        android:text="Select Student"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_student"

        android:layout_marginBottom="10dp"

        ></Spinner>



    <Button
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assign Course"
        android:layout_gravity="center"
        android:id="@+id/button_courseAssignment"
        />

</LinearLayout>